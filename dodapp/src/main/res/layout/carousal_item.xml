<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:fresco="http://schemas.android.com/apk/res-auto"
                    android:layout_width="130dp"
                    android:background="@drawable/borderswipe"
                    android:layout_height="170dp">

        <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:orientation="vertical"
                android:id="@+id/layout_images">
            <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/product_image"
                    android:layout_width="fill_parent"
                    android:layout_height="110dp"
                    fresco:roundBottomLeft="false"
                    fresco:roundBottomRight="false"
                    fresco:roundTopLeft="true"
                    fresco:roundTopRight="true"
                    fresco:roundedCornerRadius="8dp"
                    android:layout_weight="1"/>

            <ImageView
                    android:id="@+id/imgDiscount"
                    android:layout_width="38dp"
                    android:layout_height="51dp"
                    android:background="@drawable/discount_prod"
                    android:visibility="gone"/>
            <TextView
                    android:id="@+id/product_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:layout_marginTop="28dp"
                    android:visibility="gone"/>

            <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/product_merchant"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="right"/>
        </FrameLayout>


        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/layout_images">

            <View
                    android:layout_width="fill_parent"
                    android:layout_height="3px"
                    android:background="@color/dark_primary"/>

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="left|top"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="top">

                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                    <TextView
                            android:id="@+id/product_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:layout_marginTop="7dp"
                            android:layout_marginLeft="4dp"
                            android:textColor="@color/primary"
                            android:textSize="15sp"/>

                    <TextView
                            android:id="@+id/product_mrp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:layout_marginTop="4dp"
                            android:layout_marginLeft="4dp"
                            android:textColor="@color/light_primary"
                            android:textSize="12sp"/>


                </LinearLayout>

                <ImageView
                        android:id="@+id/btnCta"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/cta_buy"/>
            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>
