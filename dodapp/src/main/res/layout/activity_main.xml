<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                android:id="@+id/ll1"
                tools:context=".MainActivity">

    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/layoutflipkartspinner">
                <TextView
                        android:id="@+id/textView1"
                        android:text="Flipkart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <Spinner android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/flipkart_category_spinner"/>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/flipkart_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scrollbars="horizontal"
                    android:orientation="horizontal"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:id="@+id/layoutsnapdealspinner">
                <TextView
                        android:id="@+id/textView2"
                        android:text="Snapdeal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <Spinner android:layout_width="wrap_content"
                         android:layout_height="match_parent"
                         android:id="@+id/snapdeal_category_spinner"/>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/snapdeal_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scrollbars="horizontal"
                    android:orientation="horizontal"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
