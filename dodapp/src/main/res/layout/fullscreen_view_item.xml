<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="310dp"
        android:layout_height="match_parent"
        android:background="@drawable/border"
        android:paddingLeft="20dp"
        android:paddingBottom="20dp">

        <ImageView
                android:id="@+id/product_image"
                android:layout_width="300dp"
                android:layout_height="800dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_launcher"
                android:layout_above="@+id/product_name"/>
        <TextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#333333"
                android:text="Product Name"
                android:layout_above="@+id/layout_brand"/>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:id="@+id/layout_brand"
                      android:layout_above="@+id/layout_max_price">
                <TextView
                        android:id="@+id/label_brand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Brand"
                        android:textColor="#333333"
                        android:layout_weight="1"/>
                <TextView
                        android:id="@+id/product_brand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Brand"
                        android:textColor="#333333"
                        android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/layout_max_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_above="@+id/layout_offer_price">
                <TextView
                        android:id="@+id/label_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="MRP"
                        android:textColor="#333333"
                        android:layout_weight="1"/>
                <TextView
                        android:id="@+id/product_max_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#333333"
                        android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/layout_offer_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_above="@+id/product_price"
                android:paddingBottom="10dp">
                <TextView
                        android:id="@+id/label_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#336600"
                        android:text="Offer"
                        android:layout_weight="1"/>
                <TextView
                        android:id="@+id/product_offer_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#336600"
                        android:layout_weight="1"/>
        </LinearLayout>
        <Button
                android:id="@+id/product_price"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Price"
                android:minWidth="120dp"
                android:maxWidth="120dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#FFF"
                android:paddingBottom="5dp"
                android:background="#00CC99"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>

</RelativeLayout>