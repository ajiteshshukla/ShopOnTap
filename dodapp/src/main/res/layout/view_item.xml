<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        android:maxWidth="120dp"
        android:background="@drawable/borderswipe">

        <TextView
                android:id="@+id/product_merchant"
                android:layout_centerHorizontal="true"
                android:layout_width="120dp" android:layout_height="25dp"
                android:background="#CCC"
                android:textColor="#000"
                android:gravity="center"/>

        <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/product_image"
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:layout_below="@+id/product_merchant"
                android:padding="5dp"
                android:maxHeight="160dp"
                />

        <Button
                android:id="@+id/product_price"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:minWidth="120dp"
                android:layout_alignParentBottom="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#FFF"
                android:padding="10dp"
                android:background="@drawable/border_cardbottom_fit"
                android:layout_centerInParent="true"
                android:gravity="center"/>

</RelativeLayout>