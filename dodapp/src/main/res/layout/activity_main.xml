<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:background="@drawable/app_backgroung"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                android:id="@+id/ll1"
                tools:context=".MainActivity">

    <ScrollView android:layout_width="match_parent"
                android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:id="@+id/layoutflipkartspinner">
                <ImageView android:src="@drawable/flipkartlogo"
                           android:background="@drawable/layout_bg_flipkart"
                           android:layout_width="match_parent"
                           android:layout_height="80dp"
                           android:paddingBottom="10dp"/>
                <ImageView android:background="@null"
                           android:layout_width="match_parent"
                           android:layout_height="10dp"
                           android:paddingBottom="10dp"/>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:id="@+id/llflipkart">
                    <Spinner android:layout_width="0dp"
                             android:layout_weight="60"
                             android:layout_height="40dp"
                             android:paddingTop="10dp"
                             android:background="@drawable/layout_bg"
                             android:id="@+id/flipkart_category_spinner"/>
                    <Spinner android:layout_width="0dp"
                             android:layout_weight="40"
                             android:layout_height="40dp"
                             android:paddingTop="10dp"
                             android:background="@drawable/layout_bg"
                             android:entries="@array/discount_array"
                             android:id="@+id/flipkart_discount_spinner"/>
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView android:id="@+id/flipkart_recycler_view"
                                                    android:layout_width="match_parent"
                                                    android:paddingBottom="10dp"
                                                    android:layout_height="250dp"
                                                    android:scrollbars="horizontal"
                                                    android:orientation="horizontal"/>

            <TextView android:layout_width="fill_parent"
                      android:layout_height="1px"
                      android:background="#DADADA" />

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:id="@+id/layoutsnapdealspinner">
                <ImageView android:src="@drawable/snapdeallogo"
                           android:background="@drawable/layout_bg"
                           android:layout_width="match_parent"
                           android:layout_height="80dp"
                           android:paddingBottom="10dp"/>
                <ImageView android:background="@null"
                           android:layout_width="match_parent"
                           android:layout_height="10dp"
                           android:paddingBottom="10dp"/>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:id="@+id/llsnapdeal">
                    <Spinner android:layout_width="0dp"
                             android:layout_weight="60"
                             android:layout_height="40dp"
                             android:paddingTop="10dp"
                             android:background="@drawable/layout_bg"
                             android:id="@+id/snapdeal_category_spinner"/>
                    <Spinner android:layout_width="0dp"
                             android:layout_weight="40"
                             android:layout_height="40dp"
                             android:paddingTop="10dp"
                             android:background="@drawable/layout_bg"
                             android:entries="@array/discount_array"
                             android:id="@+id/snapdeal_discount_spinner"/>
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView android:id="@+id/snapdeal_recycler_view"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="250dp"
                                                    android:scrollbars="horizontal"
                                                    android:orientation="horizontal"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
