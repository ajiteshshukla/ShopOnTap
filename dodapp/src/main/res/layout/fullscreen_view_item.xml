<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="310dp"
        android:layout_height="match_parent"
        android:background="@drawable/borderswipe">

    <TextView
            android:id="@+id/product_merchant"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent" android:layout_height="50dp"
            android:background="#CCC"
            android:textColor="#000"
            android:gravity="center"/>

    <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:maxHeight="300dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/product_merchant"/>

    <TextView
            android:id="@+id/product_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/product_image"
            android:maxLines="2"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            />

    <TextView
            android:id="@+id/product_mrp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_above="@+id/product_price"
            android:maxLines="2"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"/>

    <TextView
            android:id="@+id/product_discount"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_above="@+id/product_price"
            android:layout_toRightOf="@+id/product_mrp"
            android:maxLines="2"
            android:textColor="#00CC99"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"/>

    <TextView
            android:id="@+id/product_price"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/border_cardbottom_fit"
            android:maxLines="2"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"/>

</RelativeLayout>