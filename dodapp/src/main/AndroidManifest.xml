<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          android:versionCode="7"
          android:versionName="version 1.6"
    package="com.lphaindia.dodapp.dodapp" >

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/sot_main"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <meta-data android:name="com.google.android.gms.version"
                   android:value="@integer/google_play_services_version" />

        <activity
                android:name=".CategoryActivity"
                android:label="@string/app_name"
                android:theme="@style/AppTheme"
                android:screenOrientation="portrait"
                android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name=".TutorialActivity"
                android:label="@string/app_name"
                android:theme="@style/AppTheme"
                android:screenOrientation="portrait"
                android:configChanges="orientation|keyboardHidden">
        </activity>
        <activity android:name=".ProductsActivity"
                  android:theme="@style/AppTheme"
                  android:screenOrientation="portrait"
                  android:configChanges="orientation|keyboardHidden"
                android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data android:name="android.app.searchable"
                       android:resource="@xml/searchable"
                       android:value=".ProductsActivity"/>
        </activity>

        <activity android:name=".ScreenSlidePagerActivity"
                  android:theme="@android:style/Theme.DeviceDefault.Light.NoActionBar"
                  android:screenOrientation="portrait"
                  android:configChanges="orientation|keyboardHidden"
                  android:noHistory="true"/>

        <receiver android:name=".IntentListener">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service android:name="com.lphaindia.dodapp.dodapp.accessibilityFeatures.TapAccessibilityService"
                 android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE" >
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                    android:name="android.accessibilityservice"
                    android:resource="@xml/testservice"/>
        </service>

    </application>

</manifest>
